cname=input('Enter customer name:')
cphno=int(input('Enter customer phno:'))
caddress=input('Enter customer address:')
a=int(input('Enter shampoo cost:'))
b=int(input('Enter  horlicks cost:'))
c=int(input('Enter oil cost:'))
d=int(input('Enter boost cost:'))
e=int(input('Enter rice cost:'))
bill=a+b+c+d+e
if bill>3000:
  tax=bill*5/100
elif bill>2000:
 tax=bill*7/100
elif bill>1000:
 tax=bill*10/100
elif bill>500:
 tax=bill*15/100
amount=tax+bill
print('total amount:',amount)
print('tax:',tax)
