b=int(input('Enter  horlicks cost:'))
c=int(input('Enter oil cost:'))
d=int(input('Enter boost cost:'))
e=int(input('Enter rice cost:'))
bill=a+b+c+d+e
if bill>3000:
  tax=bill*5/100
elif bill>2000:
 tax=bill*7/100
elif bill>1000:
 tax=bill*10/100
elif bill>500:
 tax=bill*15/100
amount=tax+bill
coupon=input('Enter coupon code:')
if coupon=='DIWALI' and  bill>5000:
    dis=bill*10/100
elif bill>3000:
    dis=bill*6/100
elif bill>1000:
    dis=bill*4/100
else:
    dis=0
if coupon=='CHRISMAS' and bill>3000:
    dis=bill*20/100
elif bill>2000:
    dis=bill*10/100
elif bill>1000:
    dis=bill*5/100
else:
    dis=0
print('total amount:',amount)
print('discount:',dis)
print('tax:',tax)
